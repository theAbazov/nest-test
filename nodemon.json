{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": ["dist", "node_modules"],
  "exec": "yarn start:dev",
  "delay": "200",
  "legacyWatch": true,
  "env": {
    "CHOKIDAR_USEPOLLING": "true",
    "CHOKIDAR_INTERVAL": "200",
    "WATCHPACK_POLLING": "true",
    "TSC_WATCHFILE": "UsePolling",
    "TSC_WATCHDIRECTORY": "UsePolling",
    "TSC_WATCHFILE_POLLING_INTERVAL": "200"
  }
}


